---
import PageLayout from '@/layouts/PageLayout.astro'
import site from '@/config.json'
const api = (site as any).bangumi?.api || ''
---

<PageLayout title="追番">
  <div class="max-w-[1100px] mx-auto px-4 md:px-8 py-16">
    <header class="space-y-2 mb-6">
      <h1 class="text-4xl font-bold">追番</h1>
    </header>
    <div class="w-full max-w-[1000px] mx-auto">
      <bilibili-bangumi api={api}></bilibili-bangumi>
    </div>
  </div>
  <script
    type="module"
    src="https://unpkg.com/@keduoli03/bilibili-bangumi-component@0.3.2/dist/bilibili-bangumi-component/bilibili-bangumi-component.esm.js"
  ></script>
  <style>
    bilibili-bangumi {
      display: block;
      width: 100%;
      min-height: 480px;
    }
  </style>
</PageLayout>
