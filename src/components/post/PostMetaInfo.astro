---
import { RelativeDate } from './RelativeDate'
import { Icon } from 'astro-icon/components'

interface Props {
  date: Date
  lastMod?: Date
  words: number
  readingMinutes: number
  class?: string
}

const { date, lastMod, words, readingMinutes, class: className } = Astro.props
---

<div class="flex flex-wrap items-center gap-2 md:gap-3 text-xs md:text-sm text-secondary" class:list={[className]}>
  <div class="icon-inline">
    <Icon name="ri:calendar-2-line" />
    <RelativeDate date={date} client:idle />
    {lastMod && <span class="text-xs">(已编辑)</span>}
  </div>
  <div class="icon-inline">
    <Icon name="ri:file-text-line" />
    <span>{words} 字</span>
  </div>
  <div class="icon-inline">
    <Icon name="ri:time-line" />
    <span>{Math.ceil(readingMinutes)} 分钟</span>
  </div>
</div>
